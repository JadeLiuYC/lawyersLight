
.page-body{
	padding: 0 44rpx 40rpx 44rpx;
}
.uni-lawyer{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	padding: 33rpx 0;
	border-bottom: 1px solid #dcdcdc;
}
.uni-lawyer .img{
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
	border: 1px solid #dcdcdc;
}
.uni-lawyer-infobox{
	padding-left: 44rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	color: #666666;
}
.uni-lawyer-infobox view{
	font-size: 23rpx;
}
.uni-lawyer-infobox .namebox{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.uni-lawyer-infobox .namebox .name{
	font-size: 34rpx;
	width: 60%;
	color: #333333;
}
.uni-lawyer-infobox .namebox .store{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: right;
}
.uni-lawyer-infobox .namebox .store .uni-icon{
	font-size: 32rpx;
	vertical-align: middle;
	margin-right: 5rpx;
}
.uni-lawyer-infobox .namebox .store .uni-icon.active{
	color: #f47505;
}
.uni-lawyer-infobox .namebox .store .tit{
	font-size: 24rpx;
	vertical-align: middle;
}
.uni-prompt{
	font-size: 34rpx;
	padding: 0 20rpx;
	margin: 30rpx 0;
	border-left: 2px solid #f47505;
}
.uni-lawyer-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin-bottom: 35rpx;
}
.uni-lawyer-item .img{
	width: 40rpx;
	height: 40rpx;
}
.uni-lawyer-item .tit{
	padding-left: 40rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	font-size: 23rpx;
}
.uni-btnbox{
	overflow: hidden;
}
.uni-selfbtn{
	width: 49%;
	text-align: center;
	background-color: #f8f6f9;
	height: 90rpx;
	line-height: 90rpx;
}
.uni-selfbtn .img{
	width: 50rpx;
	vertical-align: middle;
	margin-right: 10rpx;
}
.uni-selfbtn .tit{
	font-size: 23rpx;
	vertical-align: middle;
}
.uni-selfbtn .tit.green{
	color: #04ae0f;
}
.uni-selfbtn .tit.orange{
	color:#f3690c;
}
.uni-lawyer-comment{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.uni-comment-item{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
	color: #fff;
	background-color: #a4a3a2;
	margin: 0 10rpx;
	padding: 10rpx 0;
	font-size: 24rpx;
	border-radius: 30rpx;
}
.uni-comment-item.active{
	background-color: #f47505;
}
.uni-commnet-list-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	font-size: 23rpx;
	padding: 10rpx 0;
	border-bottom: 1px solid #dcdcdc;
}
.uni-commnet-list-item .img{
	width: 65rpx;
	height: 65rpx;
}
.uni-commnet-list-item .name{
	padding-left: 20rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.uni-commnet-list-item .comment{
	width: 140rpx;
	height: 50rpx;
	line-height: 50rpx;
	color: #fff;
	border-radius: 40rpx;
	background-color: #f47505;
	text-align: center;
}

